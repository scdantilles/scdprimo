function scdprimo_block_view($delta = '') {
  switch($delta) {
    case 'primo_global':
      $block['content'] = drupal_get_form('scdprimo_global_form');
      break;
    case 'primo_recherche':
      $block['content'] = scdprimo_recherche_tabs(); 
      break;
  }

  return $block;
}

